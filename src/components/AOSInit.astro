<!-- Inyecta e inicializa AOS en el cliente -->
<script>
  import AOS from 'aos';

  // Asegura que corra en el navegador
  if (typeof window !== 'undefined') {
    // Espera a que el DOM estÃ© listo
    window.addEventListener('DOMContentLoaded', () => {
      AOS.init({
        duration: 800,
        once: true,
        offset: 80,
        easing: 'ease-out',
      });
    });
  }
</script>
