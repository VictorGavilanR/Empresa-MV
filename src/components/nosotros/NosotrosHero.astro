<!-- Hero / Nosotros -->
<section
  id="nosotros"
  class="relative bg-[var(--color-primary)] text-[var(--color-light)] overflow-hidden pt-[var(--header-h,120px)]"
>
  <!-- Fondo + overlay -->
  <div class="absolute inset-0">
    <img
      src="/assets/equipo-trabajo.webp"
      alt="Equipo de trabajo"
      class="w-full h-full object-cover"
      loading="lazy"
      decoding="async"
    />
    <div
      class="absolute inset-0"
      style="
        background:
          linear-gradient(135deg,
            color-mix(in oklab, var(--color-primary) 78%, transparent),
            color-mix(in oklab, var(--color-dark) 78%, transparent)
          );
      "
    ></div>
  </div>

  <!-- Blobs -->
  <div class="pointer-events-none absolute inset-0 opacity-25 md:opacity-20">
    <div
      class="absolute top-0 right-0 w-[40vmin] h-[40vmin] rounded-full blur-3xl -translate-y-1/3 translate-x-1/4"
      style="background: color-mix(in oklab, var(--color-secondary) 35%, transparent);"
      aria-hidden="true"
    ></div>
    <div
      class="absolute bottom-0 left-0 w-[45vmin] h-[45vmin] rounded-full blur-3xl translate-y-1/3 -translate-x-1/4 opacity-70 md:opacity-40"
      style="background: color-mix(in oklab, var(--color-secondary) 18%, transparent);"
      aria-hidden="true"
    ></div>
  </div>

  <!-- Contenido -->
  <div class="relative z-10">
    <div class="max-w-5xl mx-auto px-4 py-16 sm:py-24 md:py-28 lg:py-32">
      <h1
        class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-extrabold leading-tight mb-6"
        data-aos="fade-up"
        data-aos-delay="100"
      >
        Impulsamos negocios con
        <span class="text-[var(--color-secondary)]"> excelencia </span> e
        <span class="text-[var(--color-secondary)]"> innovación</span>
      </h1>

      <p
        class="text-base sm:text-lg md:text-xl leading-relaxed max-w-3xl text-[color:color-mix(in_oklab,var(--color-light)85%,var(--color-gray)15%)]"
        data-aos="fade-up"
        data-aos-delay="200"
      >
        35+ años de experiencia combinando ingeniería, gestión y tecnología al
        servicio de tu empresa.
      </p>

      <div class="mt-8" data-aos="fade-up" data-aos-delay="260">
        <a
          href="#servicios"
          class="inline-block bg-[var(--color-secondary)] text-[var(--color-dark)] px-6 py-3 rounded-lg font-bold hover:brightness-110 transition shadow-lg"
        >
          Conoce nuestros servicios
        </a>
      </div>
    </div>
  </div>
</section>
