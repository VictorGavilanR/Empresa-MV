\---
import { Icon } from "astro-icon/components";

const mision =
  'Dar y brindar soluciones integrales de alta calidad en tecnología, ingeniería, diseño y soporte, que impulsen la transformación de tu empresa con innovación y gestión digital permitiendo un desarrollo armónico y de crecimiento sostenible de nuestros clientes, con compromiso ético, excelencia operativa e innovación constante.';

const vision =
  'Ser referentes a nivel local, nacional e internacional de servicios integrales de ingeniería y consultoría, reconocidos por nuestra eficiencia, creatividad y enfoque humano, generando impacto positivo en nuestros clientes y la sociedad con compromiso ético establecidos por nuestra compañía.';
---

<!-- Misión / Visión -->
<section class="py-20 px-4 bg-[var(--color-light)]">
  <div class="max-w-6xl mx-auto">
    <div class="grid gap-8 lg:grid-cols-2">
      <!-- Misión -->
      <article
        class="p-8 md:p-10 rounded-2xl shadow-md hover:shadow-lg transition-all duration-300"
        style="
          background:
            linear-gradient(135deg,
              color-mix(in oklab, var(--color-light) 92%, var(--color-primary) 8%),
              color-mix(in oklab, var(--color-light) 96%, var(--color-primary) 4%)
            );
          border: 1px solid color-mix(in oklab, var(--color-primary) 20%, transparent);
        "
        data-aos="fade-right"
      >
        <div class="flex items-center gap-3 mb-4">
          <div
            class="w-12 h-12 rounded-lg flex items-center justify-center"
            style="background: color-mix(in oklab, var(--color-secondary) 85%, transparent);"
            aria-hidden="true"
          >
            <Icon name="mdi:target-variant" class="w-7 h-7 text-[var(--color-primary)]" />
          </div>
          <h2 class="text-3xl font-bold text-[var(--color-primary)]">Misión</h2>
        </div>
        <p class="text-lg leading-relaxed text-[color:color-mix(in_oklab,var(--color-dark)80%,var(--color-gray)20%)]">
          {mision}
        </p>
      </article>

      <!-- Visión -->
      <article
        class="p-8 md:p-10 rounded-2xl shadow-md hover:shadow-lg transition-all duration-300"
        style="
          background:
            linear-gradient(135deg,
              color-mix(in oklab, var(--color-light) 92%, var(--color-secondary) 8%),
              color-mix(in oklab, var(--color-light) 96%, var(--color-secondary) 4%)
            );
          border: 1px solid color-mix(in oklab, var(--color-secondary) 28%, transparent);
        "
        data-aos="fade-left"
        data-aos-delay="100"
      >
        <div class="flex items-center gap-3 mb-4">
          <div
            class="w-12 h-12 rounded-lg flex items-center justify-center"
            style="background: color-mix(in oklab, var(--color-secondary) 85%, transparent);"
            aria-hidden="true"
          >
            <Icon name="mdi:eye-outline" class="w-7 h-7 text-[var(--color-primary)]" />
          </div>
          <h2 class="text-3xl font-bold text-[var(--color-primary)]">Visión</h2>
        </div>
        <p class="text-lg leading-relaxed text-[color:color-mix(in_oklab,var(--color-dark)80%,var(--color-gray)20%)]">
          {vision}
        </p>
      </article>
    </div>
  </div>
</section>
