---
import { Icon } from "astro-icon/components";
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import ServiciosHero from "../components/servicios/ServiciosHero.astro";
import Diferenciadores from "../components/servicios/Diferenciadores.astro";
import GridServicios from "../components/servicios/GridServicios.astro";
import Proceso from "../components/servicios/Proceso.astro";
import CtaFinalServicio from "../components/servicios/CtaFinalServicio.astro";

const title = "Servicios";
const description =
  "Soluciones integrales en ingeniería, diseño, gestión y salud para crecer con excelencia.";
---

<BaseLayout {title} {description}>
  <Header />

  <ServiciosHero />
  <GridServicios />
  <Diferenciadores />
  <Proceso />
  <CtaFinalServicio />

  <!-- JSON-LD SEO -->
  <script is:inline type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "CollectionPage",
      "name": "Servicios",
      "description": "Soluciones integrales en ingeniería, diseño, gestión y salud.",
      "hasPart": [
        { "@type": "Service", "name": "Ingeniería en Informática" },
        { "@type": "Service", "name": "Diseño Gráfico" },
        { "@type": "Service", "name": "Ingeniería Civil Industrial" },
        { "@type": "Service", "name": "Ingeniería en Alimentación" },
        { "@type": "Service", "name": "Salud Enfermería" }
      ]
    }
  </script>
</BaseLayout>
